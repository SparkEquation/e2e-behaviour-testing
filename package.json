{
  "name": "e2e-behaviour-testing",
  "version": "0.3.8",
  "description": "BDD UI testing framework with cypress and cucumber",
  "homepage": "https://github.com/SparkEquation/e2e-behaviour-testing#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh:git@github.com:SparkEquation/e2e-behaviour-testing.git"
  },
  "license": "Apache-2.0",
  "author": "Spark Equation",
  "contributors": [
    {
      "name": "Oleg Lyamzin",
      "email": "oleg@sparkequation.com",
      "url": "https://github.com/OlegAtSpark"
    },
    {
      "name": "Daniil Sloboda",
      "email": "daniil.sloboda@sparkequation.com",
      "url": "https://github.com/DanAtSpark"
    }
  ],
  "keywords": [
    "cypress",
    "cucumber",
    "e2e",
    "bdd"
  ],
  "engines": {
    "node": ">=11.0.0"
  },
  "bin": {
    "page-objects-import": "scripts/pageObjectImportsGenerator.js",
    "parse-json-results": "scripts/jsonResultsParser.js"
  },
  "main": "dist/main.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "lib",
    "dist",
    "postinstall",
    "scripts",
    "cypress.json",
    "LICENSE",
    "NOTICE",
    "README.md"
  ],
  "scripts": {
    "build": "webpack",
    "lint": "eslint **/*.ts **/*.js",
    "prebuild": "npm run lint",
    "postbuild": "git add dist && git add postinstall",
    "postinstall": "node scripts/postinstall.js",
    "pretest": "node scripts/pageObjectImportsGenerator.js",
    "prepublishOnly": "npm run build",
    "test:run": "npm run pretest && cypress run",
    "test:open": "npm run pretest && cypress open",
    "checkLicense": "legally"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && npm --no-git-tag-version version patch && git add package*.json"
    }
  },
  "dependencies": {
    "@cypress/browserify-preprocessor": "^2.1.1",
    "cucumber": "^5.1.0",
    "cypress": "^3.4.1",
    "cypress-cucumber-preprocessor": "^1.16.0",
    "cypress-xpath": "^1.4.0",
    "reflect-metadata": "^0.1.13",
    "tsify": "^4.0.1",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@types/cucumber": "^4.0.7",
    "@types/node": "^12.7.1",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "awesome-typescript-loader": "^5.2.1",
    "copy-webpack-plugin": "^5.0.4",
    "eslint": "^6.3.0",
    "husky": "^3.0.4",
    "legally": "^3.3.7",
    "mocha": "^6.2.0",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.6",
    "webpack-node-externals": "^1.7.2"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true
  }
}
