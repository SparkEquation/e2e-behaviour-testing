    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@cypress/browserify-preprocessor": "^2.1.1",
    "@types/cucumber": "^4.0.7",
    "@types/node": "^12.7.1",
    "cucumber": "^5.1.0",
    "tsify": "^4.0.1",
    "typescript": "^3.5.3"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true
  }
