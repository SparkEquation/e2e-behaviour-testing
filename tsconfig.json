{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "declaration": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": [
      "es5",
      "es6",
      "es7",
      "dom"
    ],
    "types": ["cypress", "node", "reflect-metadata"]
  },
  "exclude": [
    "./node_modules"
  ]
}
